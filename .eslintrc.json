{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "func-names": ["error", "never"],
        "no-undef": "error",
        "no-unused-expressions": ["off"],
        "no-plusplus": ["off"],
        "no-continue": ["off"],
        "no-param-reassign": ["off"],
        "max-classes-per-file": ["off"],
        "class-methods-use-this": ["error", { "exceptMethods": ["rotate"] }]
        
    }
}
